name: Simple Blockchain CI

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v4

    - name: Setup Python
      uses: actions/setup-python@v5
      with:
        python-version: '3.11'

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt
        pip install flake8 pytest

    - name: Lint source code
      run: |
        flake8 src --count --statistics \
          --max-line-length=100 \
          --ignore=E203,E226,E228,E231,E302,E401,E402,E501,F401,F841,W292

    - name: Run unit tests
      run: pytest -q --maxfail=1 --disable-warnings -v

    - name: Prepare artifact folders
      run: |
        mkdir -p charts outputs

    - name: Run demo script
      run: bash ./run_demo.sh

    - name: Upload charts
      uses: actions/upload-artifact@v4
      with:
        name: charts
        path: charts/

    - name: Upload outputs
      uses: actions/upload-artifact@v4
      with:
        name: outputs
        path: outputs/
